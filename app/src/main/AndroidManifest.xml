            android:name=".Carrinho"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pagamento"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReadQr"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Sobre"
            android:configChanges="orientation"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>