<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.enforce.hippov1.Login">


    <EditText
        android:id="@+id/emailCliente"
        android:text="thiago@bolodesal.com.br"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:layout_above="@+id/buttonNvCadastro"
        android:layout_marginBottom="44dp"
        android:layout_alignStart="@+id/buttonEnviar"
        android:layout_alignEnd="@+id/buttonNvCadastro" />

    <EditText
        android:id="@+id/senhaCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/pass"
        android:layout_marginTop="210dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/emailCliente"
        android:text="bolodesal"
        android:layout_alignEnd="@+id/buttonNvCadastro" />

    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_enviar"
        android:layout_alignBaseline="@+id/buttonNvCadastro"
        android:layout_alignBottom="@+id/buttonNvCadastro"
        android:layout_toStartOf="@+id/buttonNvCadastro"
        android:layout_marginEnd="23dp" />

    <Button
        android:id="@+id/buttonNvCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/novo_cadastro"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="320dp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/senhaCliente"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="66dp" />

</RelativeLayout>