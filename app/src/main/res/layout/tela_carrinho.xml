<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    tools:context="br.com.enforce.hippov1.Carrinho">

    <TableLayout
        android:id="@+id/tl_carrinho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/total_carrinho"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:paddingTop="5dp"
        android:scrollbarStyle="insideOverlay"></TableLayout>

    <TextView
        android:id="@+id/info_prod_carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:inputType="text"
        android:text="@string/lbl_info_carrinho"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/lbl_total_carrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:inputType="text"
        android:text="TOTAL   R$  "
        android:textAlignment="textEnd"
        android:textColor="@color/colorDefaultRED"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/total_carrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_total_carrinho"
        android:layout_alignBottom="@+id/lbl_total_carrinho"
        android:layout_alignEnd="@+id/button1"
        android:layout_toEndOf="@+id/lbl_total_carrinho"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:inputType="text"
        android:text="0,00"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="155dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="continue_shop"
        android:text="@string/lbl_btn_comprarmais"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="149dp"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:onClick="checkout"
        android:text="@string/lbl_btn_concluir"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="413dp" />

</RelativeLayout>